{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <br>
    <<h1 style="text-align: center">Panier</h1>
    <table>
        {% for enregistrement in enregistrements %}
            <tr>
                <th>Titre</th>
                <td>{{ enregistrement.titre }}</td>
                <th>Prix</th>
                <td>{{ enregistrement.prix }} €</td>
                <th>Extrait</th>
                <td><audio
                            controls
                            src="data:audio/mp3;base64,{{ enregistrement.base64Extrait }}" >
                        Votre navigateur ne supporte pas l'élément
                        <code>audio</code>.
                    </audio>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}