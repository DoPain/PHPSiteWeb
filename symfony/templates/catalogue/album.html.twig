{% extends 'base.html.twig' %}

{% block title %}Fiche Album{% endblock %}

{% block body %}
    <br>
    <h1> {{ album.titreAlbum }} </h1>


    <img src="data:image/png;base64,{{ album.base64Pochette }}" alt=''>

    <br>

    <table class="table">
        <tbody>
        <tr>
            <th>Editeur</th>
        <td> {{ editeur.nomEditeur }}</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>{{ genre.libelleAbrege}}</td>
        </tr>
        <tr>
            <th>Année de sortie</th>
            <td>{{ album.anneeAlbum }}</td>
        </tr>
        <tr>
            <th>Shopper</th>
            <td>
                <a href="{{ path('ajout-panier-album',{'code_abonne':15480},{'album':album}) }}"><img src="https://img.icons8.com/windows/50/000000/add-shopping-cart.png"></a>
                <a href="http://www.amazon.com/dp/{{ album.asin }}"><img height="32" width="32" src="https://pngimg.com/uploads/amazon/amazon_PNG27.png"></a>
            </td>
        </tr>
        </tbody>
        {% for enregistrement in enregistrements %}
            <tr>
                <th>Titre</th>
                <td>{{ enregistrement.titre }}</td>
                <th>Prix</th>
                <td>{{ enregistrement.prix }} €</td>
                <td><a href="{{ path('ajout-panier-enregistrement',{'code_abonne':15480},{'enregistrement':enregistrement}) }}"><img src="https://img.icons8.com/windows/50/000000/add-shopping-cart.png"></a></td>
                <th>Extrait</th>
                <td><audio
                            controls
                            src="data:audio/mp3;base64,{{ enregistrement.base64Extrait }}" >
                        Votre navigateur ne supporte pas l'élément
                        <code>audio</code>.
                    </audio>
                </td>
            </tr>
        {% endfor %}
    </table>

    <a href="{{ path('albums_index') }}">Retour</a>

{% endblock %}